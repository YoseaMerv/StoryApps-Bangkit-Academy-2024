<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_welcome"
        android:layout_width="321dp"
        android:layout_height="331dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/image_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Selamat Datang di StoryApps!"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_welcome" />

    <TextView
        android:id="@+id/tv_app_description"
        android:layout_width="319dp"
        android:layout_height="63dp"
        android:layout_marginTop="8dp"
        android:text="@string/deskripsiapps"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome_message" />

    <Button
        android:id="@+id/btn_go_to_login"
        android:layout_width="135dp"
        android:layout_height="47dp"
        android:text="Masuk"
        android:textColor="?attr/colorOnPrimary"
        android:backgroundTint="?attr/colorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/btn_go_to_signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_description"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btn_go_to_signup"
        android:layout_width="135dp"
        android:layout_height="47dp"
        android:text="Daftar"
        android:textColor="?attr/colorOnPrimary"
        android:backgroundTint="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_go_to_login"
        app:layout_constraintTop_toBottomOf="@id/tv_app_description"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
